

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="col-md-6 col-md-offset-3">
  <h2>Sign up</h2>

    <%= f.text_field :email, required: true, autofocus: true, placeholder:"Email" %>
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder:"Password" %>
    <%= f.text_field :password_confirmation, required: true, placeholder:"Confirm Password" %>
    <div >
      <%= f.submit  "Sign up", id:'submit' %>
    </div>


<% end %>
<br>
<%= render "devise/shared/links" %>
<br><br>
</div>
