<div class="row">
      <div class="col-md-9" style="padding-left: 50px;">
            <h1 style="margin-left: 150px;">My Little Projects</h1>
            <div class="row">
                  <% @project.each do |project|%>

                      <div class="col-md-9 app">
                            <h1><%= project.title%></h1>
                            <hr>
                            <p><%= project.description%> </p>
                            <p><%= link_to project.link do %>
                                <p style="font-size: 0.8em"> <i class="fa fa-github fa-lg"> Github Link</i></p>
                                  <%end%>
                            </p>
                            <% if user_signed_in? %>
                                <%= link_to 'Edit', edit_project_path(project)  %>
                                |
                                <%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?'} %>
                            <%end%>
                      </div>

                  <%end%>

            </div>
            <div class="pagination" style="margin-left: 5em;">
                  <%= will_paginate @project%>
            </div>
